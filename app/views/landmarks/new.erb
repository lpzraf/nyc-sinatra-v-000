<h2>Create New Landmark</h2>

<form action="/landmarks" method="POST" >
     <label>Name:</label>
     <input type="text" name="landmark[name]" id="landmark_name">
   
   <br>
   <br>
   
     <label>Titles:</label>
     <br>
     <input type="text" name="title[name]" id="new_title">
     <%@titles.each do |title|%>
     <label><%=title.name%></label>
     <input type="checkbox" name="landmark[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>">
     <%end%>

   <br>
   <br>
   
     <label>Landmark:</label>
     <br>
       <%@landmarks.each do |landmark|%>
       <label><%=landmark.name%></label>
       <input type="checkbox" name="landmark[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>">
       <%end%>
     
    <br>
    <br>
   
     <label>Create New Landmark:</label>
    <br>
     <input type="text" name="landmark[name]" id="new_landmark">
     <input type="text" name="landmark[year_completed]" id="landmark_year_completed">
     <input type="submit" value="Create New Landmark">
</form>
